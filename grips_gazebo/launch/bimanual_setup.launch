<launch>
  <!-- Export env variable so that gazebo finds the models and materials -->
	<env name="GAZEBO_MODEL_PATH" value="$(find grips_worlds)/models" />
  
	<!-- roslaunch arguments -->
  <arg name="world_name" default="$(find grips_worlds)/worlds/bimanual_setup.world"/>
	<arg name="show_rviz" default="true"/>
	<arg name="debug" default="false"/>
	<arg name="paused" default="true"/>
	<arg name="gui" default="true"/>
  <arg name="load_controllers" default="true"/>

	<!-- We resume the logic in empty_world.launch, changing only the name of 
		the world to be launched -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(arg world_name)" />
		<arg name="debug" value="$(arg debug)" />
		<arg name="gui" value="$(arg gui)" />
		<arg name="paused" value="$(arg paused)" />
		<arg name="use_sim_time" value="true" />
		<arg name="headless" value="false" />
	</include>
	
  <!-- Bring up the left_arm: description, spawn model, controllers and state publisher -->
  <include file="$(find grips_gazebo)/launch/bringup_robot.launch">
    <arg name="load_controllers" value="$(arg load_controllers)"/>
    <arg name="robot_name" value="left_arm" />
  </include>
  
  <!-- Bring up the right_arm: description, spawn model, controllers and state publisher -->
  <include file="$(find grips_gazebo)/launch/bringup_robot.launch">
    <arg name="load_controllers" value="$(arg load_controllers)"/>
    <arg name="robot_name" value="right_arm" />
  </include>
  
  <!-- Publish the transforms between arms base -->
  <node pkg="tf" type="static_transform_publisher" name="bimanual_link" args="0 0 0 0 0 0 left_arm/world right_arm/world 20" />
  
  <!-- Show in Rviz -->
	<group if="$(arg show_rviz)">
		<node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(find grips_gazebo)/launch/rviz/bimanual.rviz"/> 
	</group>
	
</launch>
